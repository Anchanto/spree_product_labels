<%= render :partial => 'spree/admin/shared/product_sub_menu' %>

<div class="toolbar" data-hook="toolbar">
  <ul class="actions">
    <li id="new_label_link">
      <%= button_link_to t(:new_label), new_admin_label_url, {:remote => true, :icon => 'add', 'data-update' => 'new_label', :id => 'new_label_link'} %>
    </li>
  </ul>
  <br class="clear" />
</div>

<h1><%= t(:listing_labels) %></h1>

<div id="new_label"></div>

<%= image_tag 'spinner.gif', :plugin => 'spree', :style => 'display:none;', :id => 'busy_indicator' %>

<table class="index">
  <thead>
    <tr data-hook="reports_header">
      <th><%= t(:title) %></th>
      <th><%= t(:shape) %></th>
      <th data-hook="admin_labels_index_header_actions" class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @labels.each do |label| %>
	    <tr data-hook="reports_row">
	      <td><%= label.title %></td>
	      <td><span class="<%= label.shape %>" style="background-color:<%=label.color%>"></span></td>
	      <td data-hook="admin_users_index_row_actions" class="actions">
          <%= link_to_edit label, :no_text => true, :class => 'edit' %> &nbsp;
          <%= link_to_delete label, :no_text => true %>
        </td>
	    </tr>
    <% end %>
  </tbody>
</table>